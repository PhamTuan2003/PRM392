<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pro"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/photocamera" />

    <TextView
        android:id="@+id/recivertextset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/reciver_shape"
        android:layout_toRightOf="@id/pro"
        android:fontFamily="@font/poppins_regular"
        android:padding="7dp"
        android:text="Techcoder"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/receiver_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/pro"
        android:background="@drawable/reciver_shape"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:contentDescription="Receiver Image" />

    <TextView
        android:id="@+id/receiver_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/recivertextset"
        android:layout_marginTop="2dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/poppins_regular"
        android:text="12:30 PM"
        android:textColor="#CCCCCC"
        android:textSize="10sp" />

</RelativeLayout> 